<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation=
    "urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::Movie"
                          title="Movies" sortOrder="60">
                    <resource id="Magento_Backend::movie" title="Movie"/>
                    <resource id="Magento_Backend::director" title="Director"/>
                    <resource id="Magento_Backend::actor" title="Actor"/>
                    <resource id="Magento_Backend::blog" title="Blog"/>
                    <resource id="Magento_Backend::save" title="Save"/>
                    <resource id="Magento_Backend::deleted" title="Deleted"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magenest_Movie::config_movie" title="Movie Section"/>
<!--                            <resource id="Magenest_Movie::config" title="Buynow Setting" sortOrder="50"/>-->

                        </resource>
                    </resource>
                </resource>

            </resource>
        </resources>
    </acl>
</config>
